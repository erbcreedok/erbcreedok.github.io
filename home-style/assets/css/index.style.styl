#top-header
  background-color #000
  color white
  height 31px
  padding 8px 0px
  position: relative;
  .text-right
    cursor default
  p
    font-size 10px
    display inline-block
    margin 0px 10px
    i:before
      font-size 14px
      color #bfbfbf
    i:hover:before
      color: #fff;
  a
    color: white
  .vertical-line
    vertical-align: top
    margin-top: -8px
    width 1px
    height 31px
    border-left 1px solid #555
    display inline-block

#main
  height 725px
  background-image url("../images/bg.jpg")
  background-size cover
  background-position-x center

#main-text
  padding 9em 0px