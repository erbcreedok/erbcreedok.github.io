p.line-height
  line-height 2.2rem;

#main
  background-image url(../images/texture.jpg);
  overflow hidden;
  .container
    overflow: visible;

  .bg-elements
    img
      width 300px
      margin-bottom -100px;

#team
  background-color #ebebeb;
  .hover-animation-container
    overflow hidden;
    position: relative;
  .hover-animation-container:hover .hover-animation
    border-radius 0%;
    opacity: 1;
    -webkit-transform: scale(1,1)
    -moz-transform: scale(1,1)
    -ms-transform: scale(1,1)
    -o-transform: scale(1,1)
    transform: scale(1,1)
  .hover-animation-container:hover .hover-animation .bg-black
    top 60px
    opacity 1
  .hover-animation
    background-color rgba(0,0,0,0.6);
    position absolute;
    width 100%;
    height 100%;
    color white;
    top 0;
    left 0;
    right 0;
    bottom 0;
    margin auto;
    border-radius 50%;
    opacity: 0
    -webkit-transform: scale(0,0);
    -moz-transform: scale(0,0);
    -ms-transform: scale(0,0);
    -o-transform: scale(0,0);
    transform: scale(0,0);
    -webkit-transition: all 150ms ease-in;
    -moz-transition: all 150ms ease-in;
    -ms-transition: all 150ms ease-in;
    -o-transition: all 150ms ease-in;
    transition: all 150ms ease-in;
    .bg-black
      background black
      position absolute
      top -50px
      left 20px
      right 20px
      opacity 0
      -webkit-transition: all 150ms 150ms ease-in;
      -moz-transition: all 150ms 150ms ease-in;
      -ms-transition: all 150ms 150ms ease-in;
      -o-transition: all 150ms 150ms ease-in;
      transition: all 150ms 150ms ease-in;
      a
        color: white;



