header
  z-index 20;
#main
  background-image url(../images/bgblur.jpg);
  background-position center;
  background-size cover;
  z-index 10;
  .bg-shadow
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  .categories
    max-width 540px
    color black;
    .category
      word-wrap break-word
      cursor: pointer
      -webkit-transition: all 150ms
      -moz-transition: all 150ms
      -ms-transition: all 150ms
      -o-transition: all 150ms
      transition: all 150ms
    .category:hover
      color #b88d5a - #444
      background-color rgba(255,255,255,.5);
      svg
        fill #b88d5a - #444
    .category.active
      color #b88d5a
      background-color white
      svg
        fill #b88d5a

.box
  -webkit-box-shadow:  0 0 5px rgba(0,0,0,.14)
  -moz-box-shadow:  0 0 5px rgba(0,0,0,.14)
  box-shadow:  0 0 5px rgba(0,0,0,.14)

#catalog
  .container
    overflow: visible
  .color-select
    height: 22px;
    width: 22px;
    box-shadow 0px 0px 2px rgba(0,0,0,.1);
    display: inline-block;
    margin: -10px 5px -7px -2px;
  .door 
    position: relative;
    cursor: pointer;
    .shadow
      -webkit-transition: all 250ms
      -moz-transition: all 250ms
      -ms-transition: all 250ms
      -o-transition: all 250ms
      transition: all 250ms
      box-shadow: 0px 0px 10px -5px rgba(0, 0, 0, 0.4);
    &:hover .shadow
        box-shadow: 0px 15px 10px -5px rgba(0, 0, 0, 0.4);
        margin-top: -10px;
        margin-bottom: 10px;
