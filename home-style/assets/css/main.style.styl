.input-group {
    display block
    border none;
    border-bottom 1px solid #ebebeb;
    padding 10px
    outline none;
    -webkit-transition: all 150ms;
    -moz-transition: all 150ms;
    -ms-transition: all 150ms;
    -o-transition: all 150ms;
    transition: all 150ms;
    -webkit-border-radius: 0px;
    -moz-border-radius:0px;
    border-radius:0px;
    -webkit-appearance: none
    -moz-appearance: none
    appearance: none
    background-color: transparent
    &:focus {
        border-color #b88d5a;
    }
    &:placeholder {
        color #aaa;
    }
    &.untouched {
        color: #aaa;
    }
    &.input-group-alt {
        border: none;
        background-color #f4f3f3;
    }
}

select.input-group, .select.input-group {
    background-image url(../images/down.png);
    background-size 10px;
    background-repeat no-repeat;
    background-position right 10px center;
    position: relative;
    white-space nowrap;
    &:focus, &.focus {
        background-image url(../images/up.png);
    }
    &.input-group-alt {
        background-image url(../images/down-orange.jpg);
        background-size: auto 100%;
        background-position right 0 center;
    }
    &.input-group-alt:focus, &.input-group-alt.focus {
        background-image url(../images/up-orange.jpg);
        background-size: auto 100%;
        background-position right 0 center;
    }
    .input-group-options {
        position: absolute;
        margin: 0px -10px;
        background: white;
        width: 100%;
        top: 38px;
        z-index:20;
        max-height: 204px;
        overflow auto;
        -webkit-transform-origin: 0 0;
        -moz-transform-origin: 0 0;
        -ms-transform-origin: 0 0;
        -o-transform-origin: 0 0;
        transform-origin: 0 0;
        -webkit-transform: rotateX(90deg)
        -moz-transform: rotateX(90deg)
        -ms-transform: rotateX(90deg)
        -o-transform: rotateX(90deg)
        transform: rotateX(90deg)
        -webkit-transition: all 120ms;
        -moz-transition: all 120ms;
        -ms-transition: all 120ms;
        -o-transition: all 120ms;
        transition: all 120ms;
        .input-group-option {
            white-space nowrap;
            overflow hidden;
            padding:7px 10px;
            border: 1px solid #eee;
            margin-bottom -1px;
            cursor: pointer;
            &:hover {
                background-color #f7f7f7;
            }
        }
    }
    &:focus .input-group-options, &.focus .input-group-options {
        -webkit-transform: rotateX(0deg)
        -moz-transform: rotateX(0deg)
        -ms-transform: rotateX(0deg)
        -o-transform: rotateX(0deg)
        transform: rotateX(0deg)
    }

}

