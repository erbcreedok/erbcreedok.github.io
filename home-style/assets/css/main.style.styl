body 
    background white
    font-family 'Lato'
    font-size 12px

section
    position: relative

.upper
    text-transform uppercase;
    letter-spacing 0.05rem

h1, h2, h3, h4, h5, h6
    font-weight bold;

h1
    font-size: 31px;

h2
    font-size 26px;

h3
    font-size 21px;

h4
    font-size 20px;

h5
    font-size: 17px;

h6
    font-size 10.5px;

.nav
    font-size: 12px;
    a
        color white
        position: relative;
        text-shadow: 0px 2px 5px rgba(0,0,0,0.62)
        &:hover
            color white - #050510;
        &:before
            height 3px
            max-width 0%
            background-color #FFB44F
            content ""
            position absolute
            top 0px
            left 20px
            right 20px
            margin auto
            trans_time = 200ms;
            -webkit-transition: trans_time
            -moz-transition: trans_time
            -ms-transition: trans_time
            -o-transition: trans_time
            transition: trans_time
        &.active:before, &:hover:before
            max-width 100%

#navbar-brand img
    margin-top 15px

p
    line-height 1;
p.big
    font-size 21px;
p.small
    font-size 11px;

.btn
    -webkit-border-radius: 0px;
    -moz-border-radius: 0px;
    border-radius: 0px;
    border none;
    font-size 13px
    cursor: pointer;
    padding: 10px 15px;
    &.big
        font-size 13px
        padding: 14px 64px;
    &.small
        font-size: 11px
        padding 0;
        line-height 22px;
        width 110px;
        height 22px;

.btn-primary
    background-color #b88d5a;
    color white
    &:hover {
        background-color #b88d5a - #222;
    }
&.btn-secondary
    background-color #eeecea;
    color #434343
    &:hover {
        color #434343
        background-color #eeecea - #222;
    }

#top-header
    background-color #000
    color white
    height 31px
    padding 8px 0px
    position: relative;
    .text-right
        cursor default
    p
        font-size 10px
        display inline-block
        margin 0px 10px
        i:before
            font-size 14px
            color #bfbfbf
        i:hover:before
            color: #fff;
    a
        color: white
    .vertical-line
        vertical-align: top
        margin-top: -8px
        width 1px
        height 31px
        border-left 1px solid #555
        display inline-block

.box
    width 846px
    background-color white
    box-shadow 0px 3px 15px 0px rgba(0,0,0,.17)
    padding 10px
    position relative
    .box-arrow {
        position: absolute;
        right 45px
        bottom 30px
        cursor pointer
        opacity: .39
        width: 23px
        &:hover {
            opacity .6
        }
    }

.image-container
    position relative;
    background-size cover
    background-position center



.cursive {
    font-family 'Lobster';
}

.indent::before {
    content ""
    display inline
    margin-right 5px
}

.gap {
    display block
    height 5px;
}

.gray {
    color #434343;
}

.grey {
    color #898989;
}

.flex-110 {
    -ms-flex 0 0 110px
    flex 0 0 110px
    max-width 110px
}

.w-320 {
    width 320px
}
.w-185 {
    width 185px
}

