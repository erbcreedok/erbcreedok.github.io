// Medium devices (tablets, 768px and up)
@media (min-width: 768px) {
  #main .bg-elements{
    height 320px;
    margin-bottom: -80px;
    img {
      &.d-left {
        position: absolute;
        left: -100px;
      }
      &.d-right {
        position: absolute;
        right -100px;
      }
      &.h-middle {
        position: absolute;
        left: 0px;
        right: -60px;
        margin auto;
        width: 240px;
      }
    }
  }
}

// Large devices (desktops, 992px and up)
@media (min-width: 992px) {
  #main .bg-elements{
    height 320px;
    img {
      &.d-left {
        position: absolute;
        left: -100px;
        width 360px;
      }
      &.d-right {
        position: absolute;
        right -100px;
        width 360px;
      }
      &.h-middle {
        position: absolute;
        left: 0px;
        right: -60px;
        margin auto;
      }
    }
  }
}

