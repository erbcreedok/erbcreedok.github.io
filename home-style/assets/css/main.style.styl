    }

}

// Large devices (desktops, 992px and up)
@media (min-width: 992px) {
    header, #top-header {
        position static;
    }
    nav {
        background-color transparent;
        padding 0px !important;
        .navbar-nav {
            margin-top -5px;
        }
        a.nav-link.active {
            color: white
        }
        a.nav-link:before {
            height 3px
            max-width 0%
            background-color #FFB44F
            content ""
            position absolute
            top 0px
            left 20px
            right 20px
            margin auto
            trans_time = 200ms;
            -webkit-transition: trans_time
            -moz-transition: trans_time
            -ms-transition: trans_time
            -o-transition: trans_time
            transition: trans_time
        }
    }
    footer input {
        width 250px;
    }
}

// Extra large devices (large desktops, 1200px and up)
@media (min-width: 1200px) {
    #news .item {
        width: 250px;
        height 310px;
    }
}