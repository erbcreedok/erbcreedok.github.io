#news {
    .item {
        -webkit-box-shadow:  0 0 5px rgba(0,0,0,.11);
        -moz-box-shadow:  0 0 5px rgba(0,0,0,.11);
        box-shadow:  0 0 5px rgba(0,0,0,.11);
        -webkit-transition: all 150ms;
        -moz-transition: all 150ms;
        -ms-transition: all 150ms;
        -o-transition: all 150ms;
        transition: all 150ms;
        padding 7px 7px 41px 7px;
        position: relative;
        cursor: default;
        width: 250px;
        height 310px;
        &:hover {
            margin-top -5px;
            margin-bottom 5px;
            -webkit-box-shadow:  0 5px 9px rgba(0,0,0,.09);
            -moz-box-shadow:  0 5px 9px rgba(0,0,0,.09);
            box-shadow:  0 5px 9px rgba(0,0,0,.09);
        }
        .image-container {
            position: relative;
        }
        .arrow {
            position: absolute;
            bottom 18px;
            right 18px;
            height 12px;
            img {
                height 12px;
                opacity .4;
            }
            &:hover img{
                opacity .6;
            }
        }
        .calendar {
            position absolute;
            background-color white;
            top 10px;
            right 10px;
            width 44px;
            height 54px;
            padding: 5px;
            span {
                display block;
                font-weight bold;
                text-align center;
                &.month {
                    color black
                    font-size 12px
                }
                &.day {
                    color #b88d5a;
                    font-size 19px;
                }
            }
        }
    }
}


@keyframes fadeout {
    0%{opacity: 1}
    100%{opacity: 0}
}
@keyframes fadein {
    0%{opacity: 0}
    100%{opacity: 1}
}
@keyframes fadeout-left {
    0%{
        opacity: 1;
        margin-left: 0px;
    }
    100%{
        opacity: 0;
        margin-left: -50px;
    }
}
@keyframes fadein-left {
    0%{
        opacity: 0;
        margin-left: 50px;
    }
    100%{
        opacity: 1;
        margin-left: 0px;
    }
}
@keyframes fadeout-right {
    0%{
        opacity: 1;
        margin-left: 0px;
    }
    100%{
        opacity: 0;
        margin-left: 50px;
    }
}
@keyframes fadein-right {
    0%{
        opacity: 0;
        margin-left: -50px;
    }
    100%{
        opacity: 1;
        margin-left: 0px;
    }
}
@keyframes background-left {
    0% {
        background-position-x: 50%;
    }
    100% {
        background-position-x: 85%;
    }

}


.door-slider-out-left {
    animation fadeout-left 150ms ease-out;
    animation-fill-mode: both;
}
.door-slider-in-left {
    animation fadein-left 150ms ease-in;
    animation-fill-mode: both;
}
.door-slider-out-right {
    animation fadeout-right 150ms ease-out;
    animation-fill-mode: both;
}
.door-slider-in-right {
    animation fadein-right 150ms ease-in;
    animation-fill-mode: both;
}


