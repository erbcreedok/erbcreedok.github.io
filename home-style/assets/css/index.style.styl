#main
  background-image url(../images/lowbg.jpg);
  background-size cover;
  overflow hidden;
  //background-position 85%;
  height: 110vh;
  -webkit-animation background-left 1200ms 1000ms ease-in;
  -moz-animation background-left 1200ms 1000ms ease-in;
  -ms-animation background-left 1200ms 1000ms ease-in;
  -o-animation background-left 1200ms 1000ms ease-in;
  animation-fill-mode both;

#main-text
  padding: 12rem 0 5rem;
  color white;

#door-image
  width 190px
  position: absolute;

#door-shadow
  width: 361px;
  position: absolute;
  top: -50px;
  left: -80px;

#door-information
  position: absolute;
  width: 198px;
  left: -198px;
  top: 70px;
  color: white;
  font-size 21px
  p
    font-weight bold;
    margin-bottom 10px
  .underline
    width: 100%;
    height: 3px;
    background-color: white;
    margin-bottom: 10px;
  .square {
    border 2px solid white;
    width 24px
    height 24px
    float: left
    margin-right 8px
    text-align center
    line-height 18px
    cursor: pointer
    -webkit-transition: 200ms
    -moz-transition: 200ms
    -ms-transition: 200ms
    -o-transition: 200ms
    transition: 200ms
    color white
    &:hover {
      color black
      background-color white
    }
    i {
      display: inline-block
      margin-top -5px;
    }
  }
  .door-type {
    color #F7DDAD
  }

#door-number
  margin-left 12px
  float: left
  font-weight:normal
  line-height: 24px

#history
  margin-top -100px;
  .image-history {
    height: 270px;
  }
  .image-history-1 {
    //width: 120px; margin-right: 10px;
    display none;
  }
  .image-history-2 {
    width 100%;
    margin-bottom 20px;
  }

#icons
  padding 60px 0px
  img
    vertical-align bottom
  .icon-container
    display inline-block
    height 30px
    vertical-align bottom

#catalog
  background-image url(../images/texture.jpg)
  color white
  padding 60px 0px
  -webkit-box-shadow: inset 0 -60px 30px -30px #fff;
  -moz-box-shadow: inset 0 -60px 30px -30px #fff;
  box-shadow: inset 0 -60px 30px -30px #fff;
  text-shadow 0px 1px 5px rgba(0,0,0,0.5);
  .door-container {
    cursor pointer
    padding 0px 10px;
    height 350px
    width 135px;
    margin-bottom: 30px;
    .door-image{
      height: 274px;
      width 115px;
      overflow hidden;
      vertical-align top;
      -webkit-box-shadow: 0px 0px 10px 5px rgba(0,0,0,.2);
      -moz-box-shadow: 0px 0px 10px 5px rgba(0,0,0,.2);
      box-shadow: 0px 0px 10px 5px rgba(0,0,0,.2);
      -webkit-transition: 170ms;
      -moz-transition: 170ms;
      -ms-transition: 170ms;
      -o-transition: 170ms;
      transition: 170ms;
      img {
        vertical-align bottom
        width 100%
      }
    }
    &:hover {
      .door-image {
        height 285px;
        width  120px;
        margin-top -11px;
        margin-left -2.5px;
        margin-bottom 0px;
        -webkit-box-shadow: 0px 2px 15px 8px rgba(0,0,0,.2);
        -moz-box-shadow: 0px 2px 15px 8px rgba(0,0,0,.2);
        box-shadow: 0px 2px 15px 8px rgba(0,0,0,.2);
      }
    }
  }
  &:after {
    display: block
    content ""
    width 100%
    height 60px;
  }

#dop-tovary
  margin-top -60px

  .item {
    padding .5rem;
  }
  .item .image-container {
    width 25%;
    padding-bottom 16%;
    -webkit-box-shadow: inset 0 0 9px 1px rgba(0,0,0,.07);
    -moz-box-shadow: inset 0 0 9px 1px rgba(0,0,0,.07);
    box-shadow: inset 0 0 9px 1px rgba(0,0,0,.07);
  }
  .item .item-info {
    width 70%;
    margin-left: .5rem;
  }
  .btn.small {
    width 32%;
  }

#workers
  margin-top 130px
  .container
    position: relative;
  .arrows
    position: absolute;
    top: 0;
    bottom 60px;
    right 15px;
    left 15px;
    height 40px;
    margin auto;
    font-size 40px;
    i
      cursor: pointer;
      opacity .5;
      &:hover
        opacity: .8;
  .image-container {
    max-width 100%;
    background-size: 130%;
    background-position: 50% 45%;
    padding-top 60%;
    margin-bottom 10px;
  }

.circles
  color #e1e1e1;
  margin 40px 0px
  i
    margin 0px 5px
    font-size 10px
    cursor: pointer
  i:hover
    color #e1e1e1-#222;
  i.active
    color #b88d5a;


#information
  background-image url(../images/bgblur.jpg);
  background-size cover;
  background-position center;
  -webkit-box-shadow: inset 0 -60px 30px -30px #fff, inset 0 60px 30px -30px #fff;
  -moz-box-shadow: inset 0 -60px 30px -30px #fff, inset 0 60px 30px -30px #fff;
  box-shadow: inset 0 -60px 30px -30px #fff, inset 0 60px 30px -30px #fff;
  .map-container
    margin-bottom -5px
  .contacts
    overflow auto;
    background-color #676666;
    p.bordered
      border: 2px solid #505050;
      a
        color: white;
      a:hover
        color: white - #222;
        text-decoration none;






@media (min-width: 576px) {
  #history {
    .image-history-1 {
      width: 170px; margin-right: 10px;
      display block; margin-bottom 20px;
    }
    .image-history-2 {
      width 280px;
    }
  }
  #dop-tovary {
    .btn.small {
      width 110px;
    }
    .item .image-container {
      width 60px;
      padding-bottom 40px;
    }
    .item .item-info {
      width 150px;
    }
  }
}

// Medium devices (tablets, 768px and up)
@media (min-width: 768px) {
  #history {
    .image-history-1 {
      width: 110px;margin-bottom 0px;
    }
    .image-history-2 {
      width 170px;
      margin-bottom 0px;
    }
  }
  #dop-tovary {
    .item .image-container {
      width 80px;
      padding-bottom 52px;
    }
  }
  #workers {
    .image-container {
      padding 0px;
      height: 282px;
      background-size: cover;
      background-position: center;
    }
  }
}

// Large devices (desktops, 992px and up)
@media (min-width: 992px) {
  #main {
    height 725px
    background-image url("../images/bg.jpg")
    background-size auto 725px
    background-position-x center
    position: relative;
    -webkit-animation: none !important;
    -moz-animation: none !important;
    -o-animation: none !important;
    -ms-animation: none !important;
    animation: none !important;
    .container {
      overflow visible;
    }
  }

  #main-text {
    padding 9em 0px
    color #000;
  }

  #door-container {
    position: absolute;
    left: 50%;
    width: 1px;
    bottom: 236px;
    margin-left: 290px;
  }

  #history {
    .image-history-1 {
      width: 120px;
    }
    .image-history-2 {
      width 270px;
      margin-bottom 0px;
    }
  }

  #dop-tovary {
    .item {
      margin-right 1rem;
    }
    .item .image-container {
      width 110px;
      padding-bottom 72px;
    }
    .item .item-info {
      width: 210px;
    }
  }
}

// Extra large devices (large desktops, 1200px and up)
@media (min-width: 1200px) {
  #history {
    .image-history-1 {
      width: 150px;
    }
    .image-history-2 {
      width 330px;
      margin-bottom 0px;
    }
  }
}